{
  "name": "BrackStatic",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "private": true,
  "repository": {
    "type" : "git",
    "url" : "https://github.com/laubsauger/static-boilerplate.git"
  },
  "scripts": {
    "postinstall": "mkdir -p build && npm run clean",
    "test": "./node_modules/karma/bin/karma start karma.conf.js",
    "test:once": "npm run test -s -- --single-run",
    "test:watch": "npm run test -s",
    "lint": "node_modules/.bin/eslint src/js",
    "sprite": "node_modules/.bin/spritesmith --rc scripts/config.spritesmith.js",
    "imagemin": "node scripts/run.imagemin.js",
    "sass": "node_modules/.bin/node-sass --output-style compressed -o build/css src/scss",
    "sass-dev": "node_modules/.bin/node-sass --output-style expanded  --source-map true --source-comments true --indent-type space --indent-width 4 -o build/css src/scss",
    "autoprefix": "node_modules/.bin/postcss --use autoprefixer -b 'last 2 versions' -r build/css/**/*.css",
    "clean": "rm -rf build/*",
    "browserify": "node_modules/.bin/browserify src/js/index.js -o build/js/app.js",
    "build:js": "npm run lint && mkdir -p build/js && npm run browserify",
    "build:css": "if [ \"$NODE_ENV\" == \"production\" ]; then npm run sass; else npm run sass-dev; fi && npm run autoprefix",
    "build:images": "npm run sprite && npm run imagemin",
    "build": "npm run clean -s && npm run build:js -s && npm run build:images -s && npm run build:css -s",
    "build:js:watch": "onchange -v 'src/js/**/*' -- npm run build:js",
    "build:css:watch": "onchange -v 'src/scss/**/*' -- npm run build:css",
    "build:images:watch": "onchange -v 'src/images/**/*' -- npm run build:images",
    "build:watch": "parallelshell 'npm run build:js:watch -s' 'npm run build:images:watch -s' 'npm run build:css:watch -s'"
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "browserify": "^13.0.1",
    "fs-extra": "^0.30.0",
    "imagemin": "^5.2.1",
    "imagemin-jpegoptim": "^5.0.0",
    "imagemin-optipng": "^5.1.0",
    "node-sass": "^3.7.0",
    "onchange": "^2.4.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "spritesmith-cli": "^1.1.2",
    "watchify": "^3.7.0",
    "browserify-istanbul": "^2.0.0",
    "chai": "^3.5.0",
    "istanbul": "^0.4.3",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.5",
    "karma-coverage": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-mocha-clean-reporter": "0.0.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sinon-chai": "^1.2.0",
    "mocha": "^2.5.1",
    "phantomjs": "^2.1.7",
    "phantomjs-prebuilt": "^2.1.7",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0"
  }
}
